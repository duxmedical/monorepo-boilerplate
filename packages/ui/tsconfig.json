{
    "compilerOptions": {
      "target": "es2017",
      "jsx": "react",
      "experimentalDecorators": true,
      "declaration": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "moduleResolution": "nodenext",
      "module":"nodenext",
      "forceConsistentCasingInFileNames": true,
      "outDir": "dist",
      "strict": true
    },
    "exclude": ["node_modules"],
  }